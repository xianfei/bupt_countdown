<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="320dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:background="#B3FFFFFF"
        android:orientation="vertical"
        tools:context=".event_add.SelectDayDialog">

    <TextView
            android:id="@+id/tv_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="24dp"
            android:gravity="center"
            android:text="选择日期"
            android:textStyle="bold" />

    <cn.carbs.android.gregorianlunarcalendar.library.view.GregorianLunarCalendarView
            android:id="@+id/calendar_view"
            android:layout_width="match_parent"
            android:layout_height="160dp"
            app:glcv_GregorianThemeColor="@color/blue_600"
            app:glcv_LunarThemeColor="@color/blue_600" />

    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

        <com.google.android.material.button.MaterialButton
                android:id="@+id/btn_cancel"
                style="@style/DialogButtonStyle"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:text="取消" />

        <com.google.android.material.button.MaterialButton
                android:id="@+id/btn_save"
                style="@style/DialogButtonStyle"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:text="保存"
                android:textStyle="bold" />

    </LinearLayout>

</LinearLayout>